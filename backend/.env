# =============================================================================
# APEC Backend Configuration
# Generated by manage.ps1
# =============================================================================

# --- Server ---
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# --- Database ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/apec_db?schema=public

# --- JWT / Authentication ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_VALIDATION_ENABLED=true
JWT_MIN_SECRET_LENGTH=32
JWT_REQUIRE_IN_PRODUCTION=true

# --- CORS ---
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# --- HTTPS / SSL ---
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=
SSL_PASSPHRASE=

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
GENERAL_RATE_LIMIT_ENABLED=false
GENERAL_RATE_LIMIT_MAX=200
GENERAL_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_ENABLED=false
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_SKIP_SUCCESS=true
UPLOAD_RATE_LIMIT_ENABLED=true
UPLOAD_RATE_LIMIT_MAX=50
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000

# --- Helmet (HTTP security headers) ---
HELMET_ENABLED=true

# --- Password Validation ---
PASSWORD_VALIDATION_ENABLED=true
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# --- Content Security ---
LOG_SANITIZATION_ENABLED=true
HTML_SANITIZATION_ENABLED=true
FILE_VALIDATION_ENABLED=true
FILE_VALIDATION_CHECK_MAGIC_BYTES=true
FILE_VALIDATION_CHECK_MIME_TYPE=true

# --- Upload ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760